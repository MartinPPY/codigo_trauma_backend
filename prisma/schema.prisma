generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model personal {
  id       Int    @id @default(autoincrement())
  nombre   String
  apellido String
  fono     Int
  email    String @unique
  password String @unique
  cargo    Int
}

model cargo {
  id          Int    @id @default(autoincrement())
  descripcion String
}

model emergencia {
  id          Int    @id @default(autoincrement())
  descripcion String
  victimas    String
  fecha       String
}

model atencion {
  id          Int    @id @default(autoincrement())
  descripcion String
  victimas    Int
  fecha       String
  estado      String
  medico      String
}
